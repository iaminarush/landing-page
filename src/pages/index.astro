---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import dayjs from "dayjs";

const initialExperience = dayjs()
  .diff(dayjs("2021-08-23 08:30:00.000+08:00"), "year", true)
  .toString()
  .substring(0, 11);
---

<Layout title="Portfolio">
  <script>
    import dayjs from "dayjs";

    let experience = document.getElementById("experience");

    setInterval(() => {
      let time = dayjs().diff(
        dayjs("2021-08-23 08:30:00.000+08:00"),
        "year",
        true
      );
      if (experience?.innerText) {
        experience.innerText = time.toString().substring(0, 11);
      }
    }, 75);

    const handleGithub = () => {
      window?.open("https://github.com/iaminarush/", "_blank")?.focus();
    };

    document
      .getElementById("githubSVG")
      ?.addEventListener("click", handleGithub);
  </script>

  <main>
    <div class="flex place-items-center h-screen p-8">
      <div class="flex flex-col gap-y-10">
        <p
          class="font-inter font-bold text-transparent text-4xl bg-clip-text bg-gradient-to-r from-blue-400 to-gray-100"
        >
          Patrick Cheng - Frontend Developer
        </p>

        <p class="text-gray-50 text-xl">
          Hello I am Patrick, a frontend developer building web and mobile
          applications using React and React Native for
          <span class="font-space text-rose-400" id="experience"
            >{initialExperience}</span
          >
          years.
        </p>
      </div>

      <div class="fixed bottom-8 ml-auto mr-auto left-0 right-0">
        <div class="flex space-x-2 justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="fill-gray-200 hover:fill-gray-400 cursor-pointer"
            viewBox="0 0 512 512"
            width="28px"
            height="28px"
            id="githubSVG"
          >
            <path
              d="M256 32C132.3 32 32 134.9 32 261.7c0 101.5 64.2 187.5 153.2 217.9a17.56 17.56 0 003.8.4c8.3 0 11.5-6.1 11.5-11.4 0-5.5-.2-19.9-.3-39.1a102.4 102.4 0 01-22.6 2.7c-43.1 0-52.9-33.5-52.9-33.5-10.2-26.5-24.9-33.6-24.9-33.6-19.5-13.7-.1-14.1 1.4-14.1h.1c22.5 2 34.3 23.8 34.3 23.8 11.2 19.6 26.2 25.1 39.6 25.1a63 63 0 0025.6-6c2-14.8 7.8-24.9 14.2-30.7-49.7-5.8-102-25.5-102-113.5 0-25.1 8.7-45.6 23-61.6-2.3-5.8-10-29.2 2.2-60.8a18.64 18.64 0 015-.5c8.1 0 26.4 3.1 56.6 24.1a208.21 208.21 0 01112.2 0c30.2-21 48.5-24.1 56.6-24.1a18.64 18.64 0 015 .5c12.2 31.6 4.5 55 2.2 60.8 14.3 16.1 23 36.6 23 61.6 0 88.2-52.4 107.6-102.3 113.3 8 7.1 15.2 21.1 15.2 42.5 0 30.7-.3 55.5-.3 63 0 5.4 3.1 11.5 11.4 11.5a19.35 19.35 0 004-.4C415.9 449.2 480 363.1 480 261.7 480 134.9 379.7 32 256 32z"
            ></path>
          </svg>

          <a href="mailto:patrickcheng@tutanota.com">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="stroke-gray-200 hover:stroke-gray-400"
              viewBox="0 0 512 512"
              width="28px"
              height="28px"
              ><rect
                x="48"
                y="96"
                width="416"
                height="320"
                rx="40"
                ry="40"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="32"></rect><path
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="32"
                d="M112 160l144 112 144-112"></path></svg
            >
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
